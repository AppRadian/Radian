<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark">

    <app.radiant.c.lly.Widgets.CircleImageView
        android:layout_marginTop="35dp"
        android:id="@+id/changeProfilePic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/blank_profile_pic" />

    <AutoCompleteTextView
        android:layout_width="200dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/changeProfilePic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:id="@+id/changeLocation"
        android:textAlignment="center"
        android:layout_height="50dp"
        android:hint="Location"
        android:textColorLink="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:id="@+id/changeLanguage"
        android:textAlignment="center"
        android:layout_below="@+id/changeLocation"
        android:hint="Mother Tongue"
        android:textColorLink="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:id="@+id/password"
        android:textAlignment="center"
        android:layout_below="@+id/changeLanguage"
        android:hint="Current Password"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textColorLink="@android:color/white" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/changePassword"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/changeLanguage"
        android:layout_alignStart="@+id/changeLanguage"
        android:textAlignment="center"
        android:hint="New Password"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textColorLink="@android:color/white" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:ems="10"
        android:id="@+id/ConfirmPassword"
        android:layout_below="@+id/changePassword"
        android:layout_alignLeft="@+id/changePassword"
        android:layout_alignStart="@+id/changePassword"
        android:hint="Confirm Password"
        android:singleLine="false"
        android:selectAllOnFocus="false"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        android:textColorLink="@android:color/white"
        android:textColorHint="@android:color/white" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:id="@+id/Save"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@android:color/white" />
</RelativeLayout>