<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Send"
        android:layout_height="wrap_content"
        android:id="@+id/sendMsgBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="60dp" />

    <EditText
        android:layout_width="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/aMessage"
        android:textAlignment="viewStart"
        android:layout_height="wrap_content"
        android:hint="Text..."
        android:layout_alignBaseline="@+id/sendMsgBtn"
        android:layout_alignBottom="@+id/sendMsgBtn"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/sendMsgBtn" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/sendMsgBtn"
        android:layout_alignParentStart="true"
        android:id="@+id/privateMessagesList" />


</RelativeLayout>