<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.radiant.c.lly">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="app.radiant.c.lly.Utilities.Account"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Radiant"
        android:supportsRtl="true"
        android:theme="@style/ownTheme2">
        <activity android:name="app.radiant.c.lly.Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->

        <activity android:name="app.radiant.c.lly.Activities.RegisterActivity" />
        <activity android:name="app.radiant.c.lly.Activities.LoginActivity" />
        <activity android:name="app.radiant.c.lly.Activities.FeedbackActivity" />
        <activity android:name="app.radiant.c.lly.Activities.SettingsActivity" />
        <activity android:name="app.radiant.c.lly.Activities.ShowBidFeedbackActivity" />
        <activity android:name="app.radiant.c.lly.Activities.ChatActivity" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="app.radiant.c.lly.Activities.MainAppActivity"
            android:label=""
            android:theme="@style/ownTheme" />
    </application>

    <!-- [START firebase_service] -->
    <service
        android:name=".MyFirebaseMessagingService">
        <intent-filter>
            <action android:name="com.google.firebase.MESSAGING_EVENT"/>
        </intent-filter>
    </service>
    <!-- [END firebase_service] -->
    <!-- [START firebase_iid_service] -->
    <service
        android:name=".MyFirebaseInstanceIDService">
        <intent-filter>
            <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
        </intent-filter>
    </service>
    <!-- [END firebase_iid_service] -->


</manifest>